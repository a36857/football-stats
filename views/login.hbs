<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" href="http://icons.iconarchive.com/icons/sportsbettingspot/summer-olympics/16/football-icon.png">
    <title>Football Stats - Login</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/ionicons.min.css" rel="stylesheet">

    <link href="/viewcss/login.css" rel="stylesheet">
</head>
<body>
    <div id="wrapper">
        {{#if signup}}
            <div class="alert alert-success" role="alert">
                <span class="glyphicon glyphicon-ok"></span><strong> Signup done with success!</strong>
            </div>
        {{/if}}

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <header id="top" class="header">
                <div class="text-vertical-center">
                    <h1>Football Stats</h1>
                    <h3>The place where you can find every league statistics</h3>
                    <br/>
                    <button href="#" class="btn btn-dark btn-lg" data-toggle="modal" data-target="#myModal"> Login</button>
                    {{#if error}}
                        <br/>
                        <div class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error: </span>
                            {{error}}
                        </div>
                    {{/if}}
                </div>
			</header>
        </div>
        <!-- /#page-content-wrapper -->
		
		<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-body row">
						<h2 class="text-center">LOGIN</h2>
						<form method="POST" action="{{login}}" class="col-md-10 col-md-offset-1 col-xs-12 col-xs-offset-0">
							<div class="form-group">
								<input type="text" name="username" class="form-control input-lg" placeholder="Username" required>
							</div>
							<div class="form-group">
								<input type="password" name="password" class="form-control input-lg" placeholder="Password" required>
							</div>
							<div class="form-group">
								<button class="btn btn-primary btn-lg btn-block">Sign In</button>
								<span class="pull-left">New here? <a href="{{singup}}">Create an account</a></span>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
    </div>
    <!-- /#wrapper -->

    <script src="js/libs/jquery.js"></script>
    <script src="js/libs/bootstrap.min.js"></script>
    <script>
		$("#menu-toggle").click(function(e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
		});

        $(document).ready(function() {
            setTimeout(function() {
                $('.alert-success').fadeOut();
            }, 1000);
        });
    </script>
</body>
</html>